{
    "version": "0.2.0",
    "configurations": [{
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Scrapy in docker",
            "type": "python",
            "request": "attach",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/smartScraper/",
                "remoteRoot": "/action/"
            }],
            "port": 5678,
            "host": "127.0.0.1"
        }

    ]
}